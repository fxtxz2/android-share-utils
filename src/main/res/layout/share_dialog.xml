<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">
    <!--wechat-->
    <TextView
        android:id="@+id/wechat"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_dialog_wechat"
        android:drawableTop="@mipmap/share_dialog_wechat"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_margin="8dp"/>
    <!--wechatmonments-->
    <TextView
        android:id="@+id/wechatmonments"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_dialog_wechatmoments"
        android:drawableTop="@mipmap/share_dialog_wechatmoments"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_margin="8dp"/>
    <!--qq-->
    <TextView
        android:id="@+id/qq"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_dialog_qq"
        android:drawableTop="@mipmap/share_dialog_qq"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_margin="8dp"/>
    <!--qzone-->
    <TextView
        android:id="@+id/qzone"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_dialog_qzone"
        android:drawableTop="@mipmap/share_dialog_qzone"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_margin="8dp"/>
</LinearLayout>